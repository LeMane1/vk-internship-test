@import '../../styles'

p
  margin 0
  text-align center
  font-weight 500
  width fit-content

.counter-text-size-16{
  font-size 11px
  font-weight 700
}

.counter-text-size-20{
  font-size 13px
  font-weight 500
}

.counter-text-size-24{
  font-size 15px
  font-weight 500
}

.counter-wrapper
  border-radius 999px
  display flex
  justify-content center
  align-items center

.counter-type-primary
  background-color primary-color
  color white

.counter-type-secondary
  background-color secondary-color
  color #2E2F33

.counter-size-8
  height 8px
  min-width 8px

.counter-size-12
  height 12px
  min-width: 12px

.counter-size-16
  height 16px
  min-width: 16px
  padding-left 4px
  padding-right 4px

.counter-size-20
  height 20px
  min-width: 20px
  padding-left 4px
  padding-right 4px

.counter-size-24
  height 24px
  min-width 24px
  padding-left 6px
  padding-right 6px

.counter-stroke
  position relative

.counter-stroke::before {
  content ''
  position absolute
  border-color #ffffff
  border-style solid
  border-radius 999px
  z-index -1
}

.counter-size-8.counter-stroke::before {
  border-width 1px
  top -1px
  left -1px
  right -1px
  bottom -1px
}

.counter-size-12.counter-stroke::before {
  border-width 2px
  top -2px
  left -2px
  right -2px
  bottom -2px
}

.counter-size-16.counter-stroke::before {
  border-width 2px
  top -2px
  left -2px
  right -2px
  bottom -2px
}

.counter-size-20.counter-stroke::before {
  border-width 2px
  top -2px
  left -2px
  right -2px
  bottom -2px
}

.counter-size-24.counter-stroke::before {
  border-width 3px
  top -3px
  left -3px
  right -3px
  bottom -3px
}
