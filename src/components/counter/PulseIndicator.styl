@import '../../styles'

.pulse-indicator {
  position relative
  display flex
  align-items center
  justify-content center
}

.pulse-indicator-size-8{
  width 8px
  height 8px
}

.pulse-indicator-size-12{
  width 12px
  height 12px
}

.pulse-indicator .children-wrapper,
.pulse-indicator .pulse {
  position absolute
  border-radius 999px
}

.pulse-indicator-primary .pulse{
  background-color primary-color
}

.pulse-indicator-secondary .pulse{
  background-color secondary-color
}

.pulse-indicator-size-8 .children-wrapper,
.pulse-indicator-size-8 .pulse {
  width 8px
  height 8px
}

.pulse-indicator-size-12 .children-wrapper,
.pulse-indicator-size-12 .pulse {
  width 12px
  height 12px
}

.pulse-indicator .pulse {
  animation-name: red-dot-scale-fade;
  animation-iteration-count: infinite; 
  animation-duration: 2s;
}

.pulse-indicator .pulse.two {
  animation-delay: 0.25s;
}

@keyframes red-dot-scale-fade {
  0% {
    opacity: 0.5;
    transform: scale(1);
  }
  50% {
    opacity: 0;
    transform: scale(3);
  }
  
  100% {
    opacity: 0;
    transform: scale(3);
  }
}