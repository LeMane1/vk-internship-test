@import '../../styles'

.pulse-wrapper{
  position static
}

.children-wrapper{
  width fit-content
  height fit-content
}

.pulse-indicator {
  position relative
  width fit-content
  height fit-content
  display flex
  align-items center
  justify-content center
}

.pulse {
  position absolute
  border-radius 999px
  width 100%
  height 100%
  animation-name: pulse-scale-fade;
  animation-iteration-count: infinite; 
  animation-duration: 2s;
  transform-origin center
}

.pulse-indicator-primary .pulse{
  background-color primary-color
}

.pulse-indicator-secondary .pulse{
  background-color secondary-color
}

.pulse-indicator .pulse.two {
  animation-delay: 0.25s;
}

@keyframes pulse-scale-fade {
  0% {
    opacity: 0.5;
    transform: scale(1);
  }
  50% {
    opacity: 0;
    transform: scale(3);
  }
  
  100% {
    opacity: 0;
    transform: scale(3);
  }
}